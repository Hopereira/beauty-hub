# ============================================
# Beauty Hub - Environment Variables
# ============================================

# Server
NODE_ENV=development
PORT=5001

# Database
DB_HOST=database
DB_PORT=5432
DB_NAME=beautyhub_db
DB_USER=beautyhub_user
DB_PASSWORD=beautyhub_secret_2026

# JWT
JWT_SECRET=bh_jwt_secret_change_me_in_production_2026
JWT_REFRESH_SECRET=bh_jwt_refresh_secret_change_me_in_production_2026
JWT_ACCESS_TOKEN_EXPIRATION=1h
JWT_REFRESH_TOKEN_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=info

# Docker Compose - External Ports (Host)
NGINX_PORT=8080
BACKEND_PORT=5001
DB_PORT=5433

# ============================================
# Billing / Payment
# ============================================

# Payment Provider: mock (dev), stripe (prod)
PAYMENT_PROVIDER=mock

# Stripe (if using stripe provider)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Pagar.me (if using pagarme provider)
# Get keys at: https://dash.pagar.me/
PAGARME_API_KEY=ak_test_xxx
PAGARME_SECRET_KEY=sk_test_xxx
PAGARME_WEBHOOK_SECRET=whsec_xxx
PAGARME_ENVIRONMENT=sandbox

# Billing Defaults
BILLING_GRACE_PERIOD_DAYS=7
BILLING_SUSPENSION_DAYS=30
BILLING_DEFAULT_TRIAL_DAYS=30
BILLING_PIX_EXPIRATION_HOURS=24
BILLING_REMINDER_DAYS_BEFORE=3

# ============================================
# Production Settings (use with docker-compose.prod.yml)
# ============================================

# Database Pool (production)
# DB_POOL_MAX=20
# DB_POOL_MIN=5
# DB_POOL_ACQUIRE=60000
# DB_POOL_IDLE=10000

# Security (production)
# HELMET_ENABLED=true
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100
# TRUST_PROXY=true

# Logging (production)
# LOG_FORMAT=json
